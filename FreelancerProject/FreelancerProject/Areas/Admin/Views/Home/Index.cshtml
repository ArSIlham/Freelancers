
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
	div.project-main {
		background: #0F69C9;
	}
</style>

<div class="container-fluid  project-main pt-5 pb-5">
	<div class="row mt-3 ">
		<div class="col-sm-6  justify-content-center">
			<div class="card fadeIn">
				<div class="card-body">
					<h5 class="card-title">New User</h5>
					<p class="card-text">Create User</p>
					<a asp-area="Admin" asp-controller="User" asp-action="CreateUser"  class="btn btn-outline-primary">Go >>> </a>
				</div>
			</div>
		</div>
		<div class="col-sm-6">
			<div class="card">
				<div class="card-body">
					<h5 class="card-title">Projects</h5>
					<p class="card-text">Manage Projects</p>
					<a asp-area="Admin" asp-controller="Project" asp-action="ProjectManager" class="btn btn-outline-success">Manage</a>
				</div>
			</div>
		</div>
	</div>
	<div class="row  mt-3">
		<div class="col-sm-6">
			<div class="card">
				<div class="card-body">
					<h5 class="card-title">User Management</h5>
					<p class="card-text">All Users</p>
					<a asp-area="Admin" asp-controller="User" asp-action="GetAllUsers" class="btn btn-outline-success">Go >>></a>
				</div>
			</div>
		</div>
		<div class="col-sm-6">
			<div class="card">
				<div class="card-body">
					<h5 class="card-title">Offered Projects</h5>
					<p class="card-text">Track project statuses</p>
					<a asp-area="Hirer" asp-controller="Project" asp-action="OfferedProjects" class="btn btn-outline-primary">Go >>> </a>
				</div>
			</div>
		</div>
	</div>

</div>



