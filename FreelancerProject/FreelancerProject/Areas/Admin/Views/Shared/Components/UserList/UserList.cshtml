@model IEnumerable<FreelancersProject.Application.DTOs.ApplicationUsersDTO>




<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
              
               <a class="btn btn-danger text-white" asp-area="Admin" asp-controller="User" asp-action="Delete" asp-route-userEmail="@item.Email">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
