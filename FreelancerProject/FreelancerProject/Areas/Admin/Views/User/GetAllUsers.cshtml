

@{
	ViewData["Title"] = "GetAllUsers";
	Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="pt-3">
	<form asp-action="GetAllUsers" asp-area="Admin" asp-controller="User" method="post">
		<div class="form-check form-check-inline">
			<input class="form-check-input" type="radio" name="rolename" id="inlineRadio1" value="Admin">
			<label class="form-check-label" for="inlineRadio1">Admin</label>
		</div>
		<div class="form-check form-check-inline">
			<input class="form-check-input" type="radio" name="rolename" id="inlineRadio2" value="FreeLancer">
			<label class="form-check-label" for="inlineRadio2">FreeLancer</label>
		</div>
		<div class="form-check form-check-inline">
			<input class="form-check-input" type="radio" name="rolename" id="inlineRadio3" value="Owner">
			<label class="form-check-label" for="inlineRadio3">Hirer</label>
		</div>
		<div class="form-check form-check-inline">
			<input type="submit" class="btn btn-primary" value="Search" />

		</div>
	</form>
</div>


@if (!string.IsNullOrEmpty(@ViewBag.RoleName))
{

	<div class="mt-5">
		@await Component.InvokeAsync("UserList", new { rolename = @ViewBag.RoleName })
	</div>
}


