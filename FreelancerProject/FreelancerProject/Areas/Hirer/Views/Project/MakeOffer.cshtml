@model IEnumerable<FreelancerListDTO>
@{
	ViewData["Title"] = "OfferProject";
	Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="my-3 p-3 bg-white rounded box-shadow">
	<h6 class="border-bottom border-gray pb-2 mb-0">Suggestions</h6>
	@foreach (var item in Model)
	{
		<div class="media text-muted pt-3">
		<img data-src="~/images/yegana.PNG" alt="" class="mr-2 rounded">
		<div class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
			<div class="d-flex justify-content-between align-items-center w-100">
				<strong class="text-gray-dark">@item.User.Name @item.User.SurName</strong>
				
				<a asp-area="Hirer" asp-controller="Project" asp-action="OfferProject" asp-route-freelancerId="@item.User.Id" class="btn btn-outline-success">Make offer</a>
			</div>
			<span class="d-block">Country: @item.Country.Name</span>
            <span class="d-block">Skills: 
			@foreach (var skill in @item.FreelancerSkils)
			{
				<span>@skill.Name</span> <span> </span>
			}
</span>
		</div>
	</div>
	}
</div>




